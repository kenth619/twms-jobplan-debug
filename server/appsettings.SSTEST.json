{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "URLs": {
    "FrontendURL": "https://sstest/template"
  },
  "CORS": {
    "Origins": [ "https://sstest/template", "http://localhost:3000" ],
    "Headers": [ "*" ]
  },
  "Serilog": {
    "Using":  [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {RequestId}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "SMTPSettings": {
    "Host": "smtp.office365.com",
    "Port": "587",
    "Username": "ttecnoreply@ttec.co.tt",
    "FromEmail": "ttecnoreply@ttec.co.tt"
  },
  "Secrets": {
    "FilePath": "./secrets.json"
  }
}
